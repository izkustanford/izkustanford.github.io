  title?: string;
  description?: string;
};

const { title, description } = Astro.props;
const titles = [];
if (title) titles.push(title);
titles.push('Izkustanford University');
const siteTitle = titles.join(' â€” ');
---

<head>
  <meta charset='UTF-8' />
