---
import Head from '../components/Head.astro';
import Menu from '../components/Menu.astro';
import type { MarkdownLayoutProps } from 'astro';

type Props = MarkdownLayoutProps<{
  title?: string;
  subtitle?: string;
}>;

const { frontmatter } = Astro.props;
const { title, subtitle } = frontmatter;
---

<!doctype html>
<html lang='en'>
  <Head title={title} />
  <body>
    <Menu />
    <main>
      <hgroup>
        <h1>{title}</h1>
        <h2>{subtitle}</h2>
        <slot />
      </hgroup>
    </main>
    <Menu />
    <style>
      hgroup {
        min-height: 70vh;
        max-width: 90vw;
        margin: 0 auto;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
      }
      h1 {
        margin: 0;
        word-break: normal;
      }
      h2 {
        margin: 1em 0 0 0;
        color: #64644b;
        word-break: normal;
      }

      h1 {
        font-size: 3em;
      }
      h2 {
        font-size: 2em;
      }

      @media screen and (min-width: 480px) {
        h1 {
          font-size: 4em;
        }
        h2 {
          font-size: 2.5em;
        }
      }

      @media screen and (min-width: 1200px) {
        h1 {
          font-size: 6em;
        }
        h2 {
          font-size: 3em;
        }
      }
    </style>
  </body>
</html>
